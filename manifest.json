{
  "manifest_version": 2,
  "name": "CSS Picker",
  "version": "1.0",

  "description": "Powerful tool for developers which allows to pick whole pack of CSS rules from selected DOM element.",
  "icons": {
    "256": "app/images/icon.png"
  },
  "content_scripts": [ {
    "js": ["lib.min.js", "content.js"],
    "matches": [ "*://*/*"]
  }],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "256": "app/images/icon.png"
    },
    "default_title": "CSS Picker",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["lib.min.js", "app.js"]
  },
  "author": "Konstantin Oficerov",
  "permissions": [
    "activeTab",
    "browsingData",
    "contextMenus",
    "storage",
    "declarativeContent",
    "fontSettings",
    "clipboardRead",
    "clipboardWrite"
  ],
  "storage": {
    "managed_schema": "schema.json"
  }
}